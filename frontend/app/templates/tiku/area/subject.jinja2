{% extends 'tiku/area/base.jinja2' %}


{% block subject_render %}
{% for i in subjects.items %}
<a href="{{ url_for('tiku_area', subject=i['alias']) }}" class="inline-block px-6 py-4 w-28 {% if request.path_params['subject'] == i['alias'] %}bg-gray-200{% else %}hover:bg-gray-200{% endif %}">
    <svg class="block w-12 h-12 m-auto mb-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M11 9V5H9v4H5v2h4v4h2v-4h4V9h-4zm-1 11a10 10 0 1 1 0-20 10 10 0 0 1 0 20z"/></svg>
    <p>{{ i['name_zh'] }}</p>
</a>
{% endfor %}
{% endblock %}

{% block paperentry %}
                <div class="flex bg-white rounded-lg p-4">
                    <div class="font-light text-base">
                        <span class="text-gray-700">已做 {{ 1 }} 题</span>
                        <span class="text-gray-400"> / 共 17 题</span>
                    </div>
                    <div class="ml-4 text-blue-400 text-base">
                        <a href="{{ url_for('tiku_paper', subject=request.path_params['subject']) }}?type=random">随机选题</a>
                    </div>
                </div>
{% endblock %}
